{
  "version": 2,
  "installCommand": "npm install --prefix api && cd frontend && npm install --include=dev",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "functions": {
    "api/index.ts": {
      "includeFiles": "api/_src/**",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.ts"
    }
  ],
  "ignore": [
    "api/src/**"
  ]
}
